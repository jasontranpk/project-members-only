    div(class='container-fluid')
      div(class='row')
        div(class='col-sm-2')
          block sidebar
            ul(class='sidebar-nav')
              if currentUser
                li Hello #{currentUser.username}
              li
                a(href='/') Home 
                if currentUser 
                  li
                    a(href=`/users/${currentUser._id}/join-club`) Join the club
                  li 
                    a(href='/users/logout') Log out
              
              unless currentUser 
                li
                  a(href='/login') Log in
                li
                  a(href='/sign-up') Sign Up
                
              if currentUser 
                hr
                li 
                  a(href='/users/create-message') Create a new message

